# Database Configuration (use strong passwords in production)
POSTGRES_URL=postgresql+psycopg://iam:${DB_PASSWORD:-iam_secure_pass}@db:5432/iam
REDIS_URL=redis://redis:6379/0

# Security Configuration
SECRET_KEY=${SECRET_KEY:-your-secret-key-change-in-production}
JWT_SECRET_KEY=${JWT_SECRET_KEY:-jwt-secret-key-change-in-production}
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Application Configuration
CONNECTOR_MODE=MOCK
ENVIRONMENT=development
DEBUG=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# External Service Credentials (use secret management in production)
GOOGLE_SA_KEY_JSON_BASE64=
GITHUB_TOKEN=
GITHUB_ORG=

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true

# SSL/TLS (enable in production)
USE_TLS=false
TLS_CERT_PATH=
TLS_KEY_PATH=
